{% extends 'layouts/master.html.twig' %}
{% block content %}
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="list-group">
                {% for post in posts %}
                    <a href="{{ path('blog_post_show',{"id": post.id}) }}" class="list-group-item">
                        <h4 class="list-group-item-heading">{{ post.title }}</h4>
                        {#m2html过滤器为自定义扩展,用于markdown转义为html#}
                        <p class="list-group-item-text">{{ post.content|md2html|striptags|slice(0, 150) }}...</p>
                    </a>
                {% endfor %}
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
{% endblock %}
